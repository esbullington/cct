{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
      "tasks": [
        {
          "label": "Deploy updates to ESP32",
          "type": "shell",
          "command": "rshell -p ${input:comPort} rsync board /pyboard",
          "group": {
              "kind": "build",
              "isDefault": true
          },
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
        },
        {
          "label": "List ESP32 files",
          "type": "shell",
          "command": "rshell -p ${input:comPort} ls /pyboard",
          "group": "build",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
        },
        {
          "label": "Open shell prompt on ESP32",
          "type": "shell",
          "command": "rshell -p ${input:comPort} repl",
          "group": "build",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
        },
        {
          "label": "Burn initial firmware (caution - erases files!)",
          "type": "shell",
          "command": "esptool.py --chip esp32 --port ${input:comPort} erase_flash && esptool.py --chip esp32 --port ${input:comPort} write_flash -z 0x1000 firmware/esp32.bin",
          "group": "build",
          "presentation": {
              "reveal": "always",
              "panel": "new"
          }
        },
        {
            "label": "pylint all: reveal code problems",
            "detail": "py -m pylint: whole project",
            "type": "shell",
            "command": "py -m pylint --msg-template '{path}:{line}:{column}:{category}:{symbol} - {msg}' src",
            "presentation": {
                "reveal": "never",
                "panel": "shared"
            },
            "problemMatcher": {
                "owner": "python",
                "fileLocation": [
                    "relative",
                    "${workspaceFolder}"
                ],
                "pattern": {
                    "regexp": "^(.+):(\\d+):(\\d+):(\\w+):(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        }
    ],
	  "inputs": [
		{
		  "id": "comPort",
		  "type": "promptString",
      "description": "ESP32 COM Port (try COM3)",
      "password": false
		}
	  ]
}
